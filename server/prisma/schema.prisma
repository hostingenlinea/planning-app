generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- MÓDULO: PERSONAS ---
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(USER)
  avatar    String?
  member    Member?
  createdAt DateTime @default(now())
}

model Member {
  id           Int       @id @default(autoincrement())
  userId       Int?      @unique
  user         User?     @relation(fields: [userId], references: [id])
  firstName    String
  lastName     String
  phone        String?
  address      String?
  city         String?
  birthDate    DateTime?
  baptized     Boolean   @default(false)
  
  // Relaciones corregidas:
  teams        TeamMember[]        // <--- Una persona puede estar en muchos equipos
  attendance   Attendance[]
  smallGroup   SmallGroup? @relation(fields: [smallGroupId], references: [id])
  smallGroupId Int?
  assignments  ServiceAssignment[]
}

// --- MÓDULO: MINISTERIOS Y EQUIPOS ---
model Ministry {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  teams       Team[]
}

model Team {
  id          Int       @id @default(autoincrement())
  name        String
  ministryId  Int
  ministry    Ministry  @relation(fields: [ministryId], references: [id])
  members     TeamMember[]          // <--- Un equipo tiene muchos miembros
  assignments ServiceAssignment[]
}

// --- NUEVA TABLA INTERMEDIA: VINCULA PERSONA CON EQUIPO ---
model TeamMember {
  id        Int    @id @default(autoincrement())
  teamId    Int
  team      Team   @relation(fields: [teamId], references: [id])
  memberId  Int
  member    Member @relation(fields: [memberId], references: [id])
  role      String? // Ej: Líder, Titular, Suplente
  
  // Evitar duplicados: Una persona no puede estar 2 veces en el mismo equipo
  @@unique([teamId, memberId]) 
}

// --- MÓDULO: PLANIFICACIÓN ---
model Service {
  id          Int       @id @default(autoincrement())
  date        DateTime
  name        String
  type        String
  plans       ServicePlanItem[]
  assignments ServiceAssignment[]
  attendance  Attendance[]
}

model ServicePlanItem {
  id          Int      @id @default(autoincrement())
  serviceId   Int
  service     Service  @relation(fields: [serviceId], references: [id])
  title       String
  type        String
  duration    Int?
  order       Int
  resourceId  String?
}

model ServiceAssignment {
  id        Int      @id @default(autoincrement())
  serviceId Int
  service   Service  @relation(fields: [serviceId], references: [id])
  teamId    Int
  team      Team     @relation(fields: [teamId], references: [id])
  memberId  Int
  member    Member   @relation(fields: [memberId], references: [id])
  status    String   @default("PENDING")
}

model SmallGroup {
  id        Int      @id @default(autoincrement())
  name      String
  leaderId  Int
  members   Member[]
}

model Attendance {
  id        Int      @id @default(autoincrement())
  serviceId Int
  service   Service  @relation(fields: [serviceId], references: [id])
  memberId  Int?
  member    Member?  @relation(fields: [memberId], references: [id])
  count     Int?
  date      DateTime @default(now())
}

enum Role {
  ADMIN
  LEADER
  USER
}